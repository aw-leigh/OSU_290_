<h1>Welcome to The Home Page</h1> <br>

<h3>Add Exercise</h3> <br>
<form id="exercise-form" action="/" method="POST">
    <div class="form-row form-group">
        <div class="form-group col-md-6">
            <label for="name">Exercise Name</label>
            <input type="text" name="name" class="form-control" placeholder="Exercise Name" id="exercise-input" required>
        </div>
        <div class="form-group col-md-6">
            <label for="date">Date</label>
            <input type="date" name="date" class="form-control" id="date-input"required>
        </div>
    </div>
    <div class="form-row form-group">
        <div class="form-group col-md-6">
            <label for="reps">Reps</label>            
            <input type="number" name="reps" class="form-control" placeholder="Reps" id="reps-input" required>
        </div>        
        <div class="form-group col-md-4">
            <label for="weight">Weight</label>            
            <input type="number" name="weight" class="form-control" placeholder="Weight" id="weight-input" required>
        </div>
        <div class="form-group col-md-1">
            <label for="unit">Unit</label>    <br>        
            <label class="radio"><input type="radio" name="unit" value="lbs" checked>lbs</label>
            <label class="radio"><input type="radio" name="unit" value="kg">kg</label>
        </div>
        <div class="form-group col-md-1"> <br>
            <input type="hidden" value="add" name="action"/ >
            <button type="submit" class="btn btn-primary" id="exercise-form-submit" style="vertical-align:middle">Add</button>
        </div>
    </div>
</form>



<h3>Completed Exercises</h3> <br>

<div id="add-exercise"></div>
<div id="exercise-table">
    <table class="table table-striped">
        <thead>
            <th>ID</th>
            <th id="name-header-col">Name</th>
            <th class="number-header-col">Reps</th>
            <th class="number-header-col">Weight</th>
            <th id="date-header-col">Date</th>
            <th id="unit-header-col">Unit</th>
            <th class="button-header-col"></th>
            <th class="button-header-col"></th>
        </thead>
        <tbody id="exercise-table-body">
            {{#each results}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{reps}}</td>
                <td>{{weight}}</td>
                <td>{{day}}</td>
                <td>{{unit}}</td>
                <td>
                    <button class="delete-button btn btn-sm btn-danger">Delete</button>
                </td>
                <td>
                    <button class="edit-button btn btn-sm btn-info">Edit</button>
                </td>
            </tr>
            {{/each}}         
        </tbody>
    </table>
</div>

<script type="text/javascript" src="/js/sendForm.js"></script>
<script type="text/javascript" src="/js/deleteButton.js"></script>
<script type="text/javascript" src="/js/editButton.js"></script>